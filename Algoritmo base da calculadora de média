//var nome = "Pedro";
//document.write("<b>" + nome + "</b>");

var notaPrimeiroBimestre = 10;
var notaSegundoBimestre = 7;
var notaTerceiroBimestre = 4;
var notaQuartoBimestre = 2;

var notaFinal = (
  (notaPrimeiroBimestre +
    notaSegundoBimestre +
    notaTerceiroBimestre +
    notaQuartoBimestre) /
  4
).toFixed(0);

if (notaFinal >= 6) {
  document.write(
    "<h2>" + "Você está aprovado!! Sua nota é " + notaFinal + "</h2"
  );
} else {
  document.write(
    "<h2>" + "Você está reprovado!! Sua nota é " + notaFinal + "</h2>"
  );
}
