// Nome do Aluno
var nome = "Pedro";

//console.log, usado para printar na tela
console.log("Bem vindo " + nome);

//Variaveis das notas do Aluno
var notaPrimeiroBimestre = 5;
var notaSegundoBimestre = 7;
var notaTerceiroBimestre = 4;
var notaQuartoBimestre = 2;

//Variavel de nota
var notaFinal =
  (notaPrimeiroBimestre +
    notaSegundoBimestre +
    notaTerceiroBimestre +
    notaQuartoBimestre) /
  4;

//to.Fixed é o comando usado para definir o valor das casas decimais
var notaFixada = notaFinal.toFixed(0);

if (notaFixada >= 6) {
  console.log("Você está aprovado!! Sua nota é " + notaFixada);
} else {
  console.log("Você está reprovado!! Sua nota é " + notaFixada);
}
